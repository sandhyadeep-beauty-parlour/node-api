<!-- base email template -->

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Get Outside</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
</head>

<body>
<div style="background-color:lightgrey;border: 0 solid #fff;padding:3em;">
    <div>
        <h1 style="font-family:Helvetica,Arial,sans-serif;margin:0;line-height:70px;color:#fff;
    background-color: #2d6eb7;padding-left: 20px;">Get Outside</h1>
    </div>

    <div style="background-color: white;padding: 14px;">
        <br>
        <% switch (filename) {
            case 'sign-up': %>
                <%- include('./sign-up.ejs', { data: data }) %>
                <%  break;
            case 'forgot-password': %>
                <%- include('./forgot-password.ejs', { data: data }) %>
                <%  break;
            default:
                break;
        } %>
</div>
</div>
</body>
</html>